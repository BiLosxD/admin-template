@import 'global'

/**
 * Login */
#login
    position: relative
    height: 100vh
    background-image: linear-gradient(45deg, $dark_primary, $primary)
    .wrapper
        position: absolute
        top: 50%
        left: 0
        right: 0
        width: 100%
        max-width: 1280px
        margin: 0 auto
        display: flex
        flex-flow: row wrap
        justify-content: flex-start
        border-radius: 10px
        transform: translateY(-50%)
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5)
        .left
            flex: 0 0 60%
            img
                border-radius: 10px 0 0 10px
                width: 100%
                height: 450px
                object-fit: cover
        .right
            border-radius: 0 10px 10px 0
            flex: 1 0 5%
            position: relative
            background-color: $white
            .overlay
                position: absolute
                top: 50%
                left: 0
                right: 0
                padding: 30px
                transform: translateY(-50%)
                h2
                    brandon_medium(32px, false)
                    color: $black
                    margin-bottom: 10px
                h3
                    brandon_light(18px, false)
                    color: $gray
                .action
                    margin-top: 30px
