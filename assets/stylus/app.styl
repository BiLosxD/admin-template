@import 'global'

/**
 * Login */
#login
    position: relative
    height: 100vh
    background-image: linear-gradient(45deg, $dark_primary, $primary)
    .wrapper
        position: absolute
        top: 50%
        left: 0
        right: 0
        width: 100%
        max-width: 1280px
        margin: 0 auto
        display: flex
        flex-flow: row wrap
        justify-content: flex-start
        border-radius: 10px
        transform: translateY(-50%)
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.3)
        .left
            flex: 0 0 60%
            img
                border-radius: 10px 0 0 10px
                width: 100%
                height: 450px
                object-fit: cover
        .right
            border-radius: 0 10px 10px 0
            flex: 1 0 5%
            position: relative
            background-color: $white
            .overlay
                position: absolute
                top: 50%
                left: 0
                right: 0
                padding: 30px
                transform: translateY(-50%)
                h2
                    brandon_medium(32px, false)
                    color: $black
                    margin-bottom: 10px
                h3
                    brandon_light(18px, false)
                    color: $gray
                .action
                    margin-top: 30px

/**
 * Sidebar */
#sidebar
    position: fixed
    top: 0
    left: 0
    z-index: 7
    width: 100%
    max-width: 260px
    height: 100vh
    background-color: $white
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1)
    transition: .3s ease-in-out
    &.floating
        max-width: 65px
        .top
            h2
                position: absolute
                top: -9999999px
                left: -9999999px
                z-index: -2
                brandon_bold(0px, false)
            .toggle
                opacity: 0
                visibility: hidden
                transition: .1s ease-in-out
        .bottom
            .list
                .item
                    .link
                        brandon_regular(0px, false)
                        span
                            position: absolute
                            top: -9999999px
                            left: -9999999px
                            z-index: -1
                        &.parent
                            &::after
                                opacity: 0
                                visibility: hidden
                                transition: .3s ease-in-out
                    .sub
                        .sub_list
                            .sub_item
                                .sub_link
                                    brandon_regular(0px, false)
                                    span
                                        position: absolute
                                        top: -9999999px
                                        left: -9999999px
                                        z-index: -1
        &.hovered
            max-width: 260px
            transition: .3s ease-in-out
            .top
                justify-content: flex-start
                h2
                    position: static
                    left: 0
                    z-index: 1
                    brandon_bold(18px, false)
                .toggle
                    opacity: 1
                    visibility: visible
            .bottom
                .list
                    .item
                        .link
                            brandon_regular(16px, false)
                            justify-content: flex-start
                            span
                                position: static
                                left: 0
                                z-index: 1
                            &.parent
                                &::after
                                    opacity: 1
                                    visibility: visible
                                    transition: .3s ease-in-out
                        .sub
                            .sub_list
                                .sub_item
                                    .sub_link
                                        brandon_regular(16px, false)
                                        justify-content: flex-start
                                        span
                                            position: static
                                            left: 0
                                            z-index: 1
    .top
        position: relative
        padding: 20px 17px
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: flex-start
        transition: .3s ease-in-out .3s
        img
            width: 30px
            height: 30px
            transition: .3s ease-in-out .3s
        h2
            padding-left: 10px
            brandon_bold(18px, false)
            color: $gray
            transition: .3s ease-in-out .3s
        .toggle
            position: absolute
            top: 50%
            right: 10px
            opacity: 1
            visibility: visible
            transform: translateY(-50%)
            transition: .3s ease-in-out .3s
            svg
                color: $primary
    .shadow
        position: absolute
        margin-top: -20px
        z-index: 2
        height: 60px
        width: 100%
        pointer-events: none
        -webkit-filter: blur(5px)
        filter: blur(5px)
        background: -webkit-gradient(linear,left top,left bottom,color-stop(41%,#fff),color-stop(95%,hsla(0,0%,100%,.11)),to(hsla(0,0%,100%,0)))
    .bottom
        height: 100%
        overflow-y: auto
        padding: 30px 10px 20px
        .list
            list-style: none
            padding: 0
            margin: 0
            .item
                margin-bottom: 5px
                &:last-child
                    margin-bottom: 0
                &.toggled
                    .link
                        background-color: $gray_v2
                        transition: .3s ease-in-out
                        & ~ .sub
                            opacity: 1
                            transition: .3s ease-in-out
                        &.parent
                            &::after
                                transform: translateY(-50%) rotate(180deg)
                                transition: .3s ease-in-out
                .link
                    display: flex
                    flex-flow: row wrap
                    align-items: center
                    justify-content: flex-start
                    position: relative
                    z-index: 1
                    padding: 7.5px 10px
                    brandon_regular(16px, false)
                    color: $gray
                    border-radius: 5px
                    box-shadow: 0 0 20px transparent
                    background-color: transparent
                    transition: .3s ease-in-out
                    &.parent
                        &.active
                            padding: 7.5px 10px
                            background-color: $gray_v2
                            transition: .3s ease-in-out
                        &::after
                            content: ''
                            pointer-events: none
                            position: absolute
                            top: 50%
                            right: 10px
                            z-index: 1
                            border-top: 7px solid $primary
                            border-left: 7px solid transparent
                            border-right: 7px solid transparent
                            transform: translateY(-50%) rotate(0deg)
                            transition: .3s ease-in-out
                    .link_icon
                        pointer-events: none
                        flex: 0 0 auto
                        padding-bottom: 3px
                    svg
                        position: inherit
                        z-index: 1
                        &.icon
                            opacity: 1
                            transition: .3s ease-in-out
                    span
                        pointer-events: none
                        display: inline-block
                        padding-left: 10px
                        position: inherit
                        z-index: 1
                        transform: translateX(0)
                        transition: .3s ease-in-out
                    &::before
                        content: ''
                        position: absolute
                        pointer-events: none
                        top: 0
                        left: 0
                        right: 0
                        bottom: 0
                        opacity: 0
                        z-index: 0
                        visibility: hidden
                        background-image: linear-gradient(45deg, $dark_primary, $primary)
                        border-radius: 5px
                        transition: .3s ease-in-out
                    &:hover
                        padding: 7.5px 10px 7.5px 15px
                        background-color: $gray_v2
                        transition: .3s ease-in-out
                    &.exact
                        color: $white
                        box-shadow: 0 0 20px rgba(255, 144, 0, 0.5)
                        transition: .3s ease-in-out
                        svg
                            &.icon
                                opacity: 0.8
                                stroke: $white
                                transition: .3s ease-in-out
                        &::before
                            opacity: 1
                            visibility: visible
                            transition: .3s ease-in-out
                .sub
                    display: block
                    height: 0px
                    overflow: hidden
                    opacity: 0
                    transition: .3s ease-in-out
                    .sub_list
                        list-style: none
                        padding: 0
                        margin: 0
                        .sub_item
                            margin-bottom: 5px
                            &:last-child
                                margin-bottom: 0
                            .sub_link
                                display: flex
                                flex-flow: row wrap
                                align-items: center
                                justify-content: flex-start
                                position: relative
                                padding: 7.5px 15px
                                brandon_regular(16px, false)
                                color: $gray
                                border-radius: 5px
                                box-shadow: 0 0 20px transparent
                                transition: .3s ease-in-out
                                .sub_link_icon
                                    flex: 0 0 auto
                                    padding-bottom: 3px
                                svg
                                    width: 15px
                                    height: 15px
                                    position: inherit
                                    z-index: 1
                                    &.icon
                                        opacity: 1
                                        transition: .3s ease-in-out
                                span
                                    display: inline-block
                                    padding-left: 10px
                                    position: inherit
                                    z-index: 1
                                    transform: translateX(0)
                                    transition: .3s ease-in-out
                                &::before
                                    content: ''
                                    position: absolute
                                    top: 0
                                    left: 0
                                    right: 0
                                    bottom: 0
                                    opacity: 0
                                    z-index: 0
                                    visibility: hidden
                                    background-image: linear-gradient(45deg, $dark_primary, $primary)
                                    border-radius: 5px
                                    transition: .3s ease-in-out
                                &:hover
                                    padding: 7.5px 10px 7.5px 20px
                                    transition: .3s ease-in-out
                                &.exact
                                    color: $white
                                    box-shadow: 0 0 20px rgba(255, 144, 0, 0.5)
                                    transition: .3s ease-in-out
                                    svg
                                        &.icon
                                            opacity: 0.8
                                            stroke: $white
                                            transition: .3s ease-in-out
                                    &::before
                                        opacity: 1
                                        visibility: visible
                                        transition: .3s ease-in-out
