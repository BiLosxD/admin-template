@import 'global'

/**
 * Root */
.__db
    &.full
        #dashboard
            margin-left: 70px
            transition: .3s ease-in-out
    #dashboard
        padding: 30px
        margin-left: 260px
        transition: .3s ease-in-out

/**
 * Login */
#login
    position: relative
    height: 100vh
    background-image: linear-gradient(45deg, $dark_primary, $primary)
    .wrapper
        position: absolute
        top: 50%
        left: 0
        right: 0
        width: 100%
        max-width: 1280px
        margin: 0 auto
        display: flex
        flex-flow: row wrap
        justify-content: flex-start
        border-radius: 10px
        transform: translateY(-50%)
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.3)
        .left
            flex: 0 0 60%
            img
                border-radius: 10px 0 0 10px
                width: 100%
                height: 450px
                object-fit: cover
        .right
            border-radius: 0 10px 10px 0
            flex: 1 0 5%
            position: relative
            background-color: $white
            .overlay
                position: absolute
                top: 50%
                left: 0
                right: 0
                padding: 30px
                transform: translateY(-50%)
                h2
                    brandon_medium(32px, false)
                    color: $black
                    margin-bottom: 10px
                h3
                    brandon_light(18px, false)
                    color: $gray
                .action
                    margin-top: 30px

/**
 * Sidebar */
#sidebar
    position: fixed
    top: 0
    left: 0
    z-index: 7
    width: 100%
    max-width: 260px
    height: 100vh
    background-color: $white
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1)
    transition: .3s ease-in-out
    &.floating
        max-width: 70px
        .top
            justify-content: center
            h2
                position: absolute
                top: -9999999px
                left: -9999999px
                z-index: -2
                brandon_bold(0px, false)
            .toggle
                opacity: 0
                visibility: hidden
                transition: .1s ease-in-out
        .bottom
            .list
                .item
                    .link
                        brandon_regular(0px, false)
                        justify-content: center
                        span
                            position: absolute
                            top: -9999999px
                            left: -9999999px
                            z-index: -1
        &.hovered
            max-width: 260px
            transition: .3s ease-in-out
            .top
                justify-content: flex-start
                h2
                    position: static
                    left: 0
                    z-index: 1
                    brandon_bold(18px, false)
                .toggle
                    opacity: 1
                    visibility: visible
            .bottom
                .list
                    .item
                        .link
                            brandon_regular(16px, false)
                            justify-content: flex-start
                            span
                                position: static
                                left: 0
                                z-index: 1
    .top
        position: relative
        padding: 20px 10px
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: flex-start
        transition: .3s ease-in-out .3s
        img
            width: 30px
            height: 30px
            transition: .3s ease-in-out .3s
        h2
            padding-left: 20px
            brandon_bold(18px, false)
            color: $gray
            transition: .3s ease-in-out .3s
        .toggle
            position: absolute
            top: 50%
            right: 10px
            opacity: 1
            visibility: visible
            transform: translateY(-50%)
            transition: .3s ease-in-out .3s
            svg
                color: $primary
    .bottom
        height: 100%
        overflow-y: auto
        padding: 20px 10px
        .list
            list-style: none
            padding: 0
            margin: 0
            .item
                margin-bottom: 5px
                &:last-child
                    margin-bottom: 0
                .link
                    display: flex
                    flex-flow: row wrap
                    align-items: center
                    justify-content: flex-start
                    position: relative
                    padding: 7.5px 10px
                    brandon_regular(16px, false)
                    color: $gray
                    border-radius: 5px
                    box-shadow: 0 0 20px transparent
                    transition: .3s ease-in-out
                    svg
                        position: inherit
                        z-index: 1
                        &.icon
                            opacity: 1
                            transition: .3s ease-in-out
                    span
                        display: inline-block
                        padding-left: 10px
                        position: inherit
                        z-index: 1
                        transform: translateX(0)
                        transition: .3s ease-in-out
                    &::before
                        content: ''
                        position: absolute
                        top: 0
                        left: 0
                        right: 0
                        bottom: 0
                        opacity: 0
                        z-index: 0
                        visibility: hidden
                        background-image: linear-gradient(45deg, $dark_primary, $primary)
                        border-radius: 5px
                        transition: .3s ease-in-out
                    &:hover
                        padding: 7.5px 10px 7.5px 15px
                        transition: .3s ease-in-out
                    &.nuxt-link-exact-active
                        color: $white
                        box-shadow: 0 0 20px rgba(255, 144, 0, 0.5)
                        transition: .3s ease-in-out
                        svg
                            &.icon
                                opacity: 0.8
                                stroke: $white
                                transition: .3s ease-in-out
                        &::before
                            opacity: 1
                            visibility: visible
                            transition: .3s ease-in-out
