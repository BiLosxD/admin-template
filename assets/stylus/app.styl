@import 'global'

/**
 * Login */
#login
    position: relative
    height: 100vh
    background-image: linear-gradient(45deg, $dark_primary, $primary)
    .wrapper
        position: absolute
        top: 50%
        left: 0
        right: 0
        width: 100%
        max-width: 1280px
        margin: 0 auto
        display: flex
        flex-flow: row wrap
        justify-content: flex-start
        border-radius: 10px
        transform: translateY(-50%)
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.3)
        .left
            flex: 0 0 60%
            img
                border-radius: 10px 0 0 10px
                width: 100%
                height: 450px
                object-fit: cover
        .right
            border-radius: 0 10px 10px 0
            flex: 1 0 5%
            position: relative
            background-color: $white
            .overlay
                position: absolute
                top: 50%
                left: 0
                right: 0
                padding: 30px
                transform: translateY(-50%)
                h2
                    brandon_medium(32px, false)
                    color: $black
                    margin-bottom: 10px
                h3
                    brandon_light(18px, false)
                    color: $gray
                .action
                    margin-top: 30px

/**
 * Sidebar */
#sidebar
    position: fixed
    top: 0
    left: 0
    z-index: 7
    width: 100%
    max-width: 260px
    height: 100vh
    background-color: $white
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.25)
    .top
        padding: 20px
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: flex-start
        img
            width: 30px
            height: 30px
        h2
            padding-left: 20px
            brandon_bold(18px, false)
            color: $gray
    .bottom
        height: 100%
        overflow-y: auto
        padding: 20px 0 20px 20px
        .list
            list-style: none
            padding: 0
            margin: 0
            .item
                .link
                    display: block
                    position: relative
                    padding: 10px 15px
                    brandon_medium(18px, false)
                    color: $primary
                    border-radius: 10px 0 0 10px
                    transition: .3s ease-in-out
                    span
                        position: inherit
                        z-index: 1
                    &::before
                        content: ''
                        position: absolute
                        top: 0
                        left: 100%
                        right: 0
                        bottom: 0
                        opacity: 0
                        z-index: 0
                        visibility: hidden
                        background-color: $primary
                        border-radius: 10px 0 0 10px
                        transition: .3s ease-in-out
                    &:hover
                        color: $white
                        transition: .3s ease-in-out
                        &::before
                            left: 0
                            opacity: 1
                            visibility: visible
                            transition: .3s ease-in-out

#dashboard
    margin-left: 260px
