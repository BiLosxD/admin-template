/**
 * Form */
.action
    .group_inline
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: space-between
        margin-bottom: 20px
    .call_to_action
        brandon_regular(14px, false)
        color: $gray
        transition: .3s ease-in-out
        &:hover
            color: $primary
            transition: .3s ease-in-out
    .checkbox
        position: relative
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: flex-start
        label
            position: relative
            brandon_regular(14px, false)
            color: $gray
            padding-left: 10px
            margin-bottom: 0
            transition: .3s ease-in-out
        .check
            -webkit-appearance: none
            outline: none
            width: 20px
            height: 20px
            padding-left: 20px
            background-image: url('data:image/svg+xml;base64,')
            background-position: center
            background-repeat: no-repeat
            background-size: contain
            transition: .3s ease-in-out
            &:checked
                background-image: url('data:image/svg+xml;base64,')
                transition: .3s ease-in-out
    .group
        position: relative
        margin-bottom: 20px
        label
            position: absolute
            top: 50%
            left: 0
            brandon_medium(16px, true)
            color: $gray
            z-index: 0
            opacity: 0.5
            transform: translateY(-50%)
            transition: .3s ease-in-out
        .input
            position: relative
            z-index: 1
            width: 100%
            background-color: transparent
            border: none
            padding: 10px
            border-bottom: 2px solid $black
            outline: none
            box-shadow: none
            brandon_regular(16px, false)
            color: $gray
            transition: .3s ease-in-out
            &.filled,
            &:focus
                border-bottom: 2px solid $primary
                transition: .3s ease-in-out
                & ~ label
                    brandon_medium(12px, true)
                    color: $primary
                    top: 0
                    opacity: 1
                    transition: .3s ease-in-out
    .buttons
        padding-top: 20px
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: space-between

/**
 * Data List */
.table
    border-collapse: separate
    border-spacing: 0 15px
    thead
        &.sticky
            tr
                th
                    &.stick
                        background-color: $gray_v3
                        position: sticky
                        z-index: 1
                        top: calc(0% + 85px)
                        color: $white
                        padding: 10px 15px
                        transition: .3s ease-in-out
                        &:first-child
                            border-radius: 5px 0 0 5px
                        &:last-child
                            border-radius: 0 5px 5px 0
                    .label
                        color: $white
                        transition: .3s ease-in-out
                    &.sort
                        .label
                            &.asc
                                &::before
                                    border-bottom: 7px solid $primary
                                    transition: .3s ease-in-out
                            &.desc
                                &::after
                                    border-top: 7px solid $primary
                                    transition: .3s ease-in-out
                            &::before
                                border-bottom: 7px solid $white
                                transition: .3s ease-in-out
                            &::after
                                border-top: 7px solid $white
                                transition: .3s ease-in-out
        tr
            text-align: left
            th
                position: relative
                top: 0
                padding: 0 15px
                background-color: transparent
                transition: .3s ease-in-out
                .label
                    position: relative
                    display: inline-block
                    color: $gray
                    brandon_medium(14px, true)
                    padding-right: 20px
                    transition: .3s ease-in-out
                &.sort
                    .label
                        &.asc
                            &::before
                                border-bottom: 7px solid $primary
                                transition: .3s ease-in-out
                        &.desc
                            &::after
                                border-top: 7px solid $primary
                                transition: .3s ease-in-out
                        &::before
                            content: ''
                            pointer-events: none
                            position: absolute
                            top: 20%
                            right: 0
                            z-index: 1
                            border-bottom: 7px solid $gray
                            border-left: 7px solid transparent
                            border-right: 7px solid transparent
                            transform: translateY(-50%) rotate(0deg)
                            transition: .3s ease-in-out
                        &::after
                            content: ''
                            pointer-events: none
                            position: absolute
                            top: 80%
                            right: 0
                            z-index: 1
                            border-top: 7px solid $gray
                            border-left: 7px solid transparent
                            border-right: 7px solid transparent
                            transform: translateY(-50%) rotate(0deg)
                            transition: .3s ease-in-out
    tbody
        tr
            border-radius: 5px
            box-shadow: 0 0 20px 0 rgba(0 ,0, 0, .05)
            background-color: $white
            border: 1px solid $primary
            transition: .3s ease-in-out
            &:hover
                border: 1px solid $primary
