    &.rectangle
        border-radius: 0px
    &.outline
        color: $primary
        background-color: transparent
    &.flat
        color: $primary
        border: none
        background-color: transparent
    &:hover
        box-shadow: 0 0 20px rgba(255, 144, 0, 0.5)
        transform: translateY(-5px)
