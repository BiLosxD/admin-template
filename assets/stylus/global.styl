@import 'fonts'

$primary = #FF9000
$dark_primary = #FF4400
$black = #111
$white = #FFF
$blue = #438EFF
$red = #EA5455
$gray = #7A7A7A
$gray_v2 = #F6F6F6
$gray_v3 = #C3C3C3
$success = #00A014
$warning = #ffc800

html
    -webkit-text-size-adjust: none
    -webkit-font-smoothing: subpixel-antialiased
    backface-visibility: hidden
    brandon_regular(18px, false)

body
    &::-webkit-scrollbar
        width: 20px
        background-color: $gray_v2
    &::-webkit-scrollbar-track
        box-shadow: none
    &::-webkit-scrollbar-thumb
        background-color: $primary
        border: 6px solid rgba(0, 0, 0, 0)
        background-clip: padding-box
        border-radius: 50px

::-webkit-scrollbar-track
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1)
	background-color: $gray_v2
	border-radius: 10px
::-webkit-scrollbar
	width: 5px
	height: 10px
	background-color: $gray_v2
::-webkit-scrollbar-thumb
	border-radius: 10px
	background-color: $primary

body
    overflow-x: hidden
    background-color: $gray_v2
    &.cms
    &.no_click
        pointer-events: none
    &.no_scroll
        overflow-y: hidden

*,
*:before,
*:after
    user-select: none
    box-sizing: border-box
    margin: 0

button
    outline: none

input,
input:before,
input:after,
textarea,
textarea:before,
textarea:after,
select,
select:before,
select:after
    user-select: initial

a
    text-decoration: none

h1,
h2,
h3,
h4,
h5
    font-weight: normal

img
    height: auto
    vertical-align: middle

table
    width: 100%
    border-collapse: collapse

.hidden
    display: none

.none
    pointer-events: none

@page
    size: landscape
    margin: 0cm

@media print
    body
        margin: 0.75cm
        -webkit-print-color-adjust: exact

svg,
span
    vertical-align: middle

.pointer
    cursor: pointer

.mb
    margin-bottom: 30px
    transition: .3s ease-in-out
    &.twenty
        margin-bottom: 20px
        transition: .3s ease-in-out

.ml
    margin-right: 30px
    &.ten
        margin-right: 10px
    &.twenty
        margin-right: 20px

/**
 * Root */
.__db
    position: relative
    .swallower
        position: sticky
        top: 0
        z-index: 1
        height: 85px
        width: 100%
        pointer-events: none
        background: -webkit-gradient(linear,left top,left bottom,color-stop(41%,#fff),color-stop(95%,hsla(0,0%,100%,.11)),to(hsla(0,0%,100%,0)))
    &.full
        #header
            max-width: calc(100% - 130px)
            transition: .3s ease-in-out
        #footer
            max-width: calc(100% - 70px)
            transition: .3s ease-in-out
        #dashboard
            margin-left: 70px
            transition: .3s ease-in-out
    #dashboard
        padding: 60px 30px
        margin-left: 260px
        transition: .3s ease-in-out
        &.error
            .wrapper
                display: flex
                flex-flow: column wrap
                align-items: center
                justify-content: center
                height: calc(100vh - 205px)
                .title
                    margin-top: 10px
                    brandon_bold(26px, true)
                .subtitle
                    margin: 10px 0 20px
                    brandon_regular(18px, false)

/**
 * Header */
#header
    position: fixed
    top: 30px
    z-index: 2
    right: 30px
    width: 100%
    max-width: calc(100% - 320px)
    display: flex
    flex-flow: row wrap
    align-items: center
    justify-content: space-between
    border-radius: 5px
    background-color: $white
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1)
    transition: .3s ease-in-out
    .header_nav
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: space-between
        padding: 0 20px
        .title
            brandon_bold(18px, true)
            color: $dark_primary
            letter-spacing: 0.25px
            padding-right: 10px
        #breadcrumb
            padding-left: 10px
            border-left: 1px solid #E2E2E2
    .header_select
        position: relative
        border-left: 1px solid #E2E2E2
        user-select: none
        &::before
            content: ''
            position: absolute
            top: 50%
            right: calc(0% + 15px)
            width: 0
            border-left: 7px solid transparent
            border-right: 7px solid transparent
            border-top: 7px solid $primary
            transform: translateY(-50%) rotateX(0deg)
            transition: .3s ease-in-out
        .header_user
            padding: 10px 40px 10px 15px
            display: flex
            flex-flow: row wrap
            align-items: center
            cursor: pointer
            .user_picture
                position: relative
                text-transform: uppercase
                width: 35px
                height: 35px
                background-image: linear-gradient(45deg, $dark_primary, $primary)
                border-radius: 50%
                margin-right: 10px
                .overlay
                    position: absolute
                    top: 50%
                    left: 0
                    right: 0
                    text-align: center
                    transform: translateY(-50%)
                    color: $white
                    brandon_regular(14px, false)
            .user_name
                brandon_regular(16px, false)
                color: $black
        .user_select
            position: absolute
            right: 0
            top: calc(100% + 30px)
            z-index: 1
            width: 300px
            border-radius: 5px
            background-color: $white
            opacity: 0
            visibility: hidden
            box-shadow: 15px 25px 40px rgba(0, 0, 0, 0.05)
            transition: all .2s ease-in-out
            a
                text-decoration: none
                outline: none
                display: block
            .select_header
                display: flex
                flex-flow: row wrap
                align-items: center
                justify-content: space-between
                padding: 20px
                background-image: linear-gradient(45deg, $dark_primary, $primary)
                border-radius: 5px 5px 0 0
                .select_info
                    .header_name
                        brandon_regular(16px, false)
                        color: $white
                    .header_role
                        brandon_light(14px, false)
                        color: #F8F8FB
                        margin-top: 5px
                .header_studio
                    .action_btn
                        flex: 0 0 auto
            .select_footer
                display: flex
                justify-content: space-between
                .select_item
                    position: relative
                    brandon_regular(14px, false)
                    color: $black
                    padding: 10px 15px
                    transition: .3s ease-in-out
                    &.account
                        span
                            padding-left: 10px
                    &.logout
                        span
                            padding-right: 10px
                    &:hover
                        color: $primary
                        transition: .3s ease-in-out

        &.active
            &::before
                transform: translateY(-50%) rotateX(180deg)
                transition: .3s ease-in-out
            .user_select
                top: 100%
                visibility: visible
                opacity: 1
                transition: all .2s ease-in-out

/**
 * Footer */
#footer
    position: fixed
    bottom: 0
    z-index: 2
    right: 0
    width: 100%
    max-width: calc(100% - 260px)
    display: flex
    flex-flow: row wrap
    align-items: center
    padding: 10px 30px
    background-image: linear-gradient(45deg, $dark_primary, $primary)
    justify-content: space-between
    transition: .3s ease-in-out
    .label
        color: $white
        brandon_regular(14px, false)

/**
 * Breadcrumb */
#breadcrumb
    &.left
        .list
            justify-content: flex-start
    &.right
        .list
            justify-content: flex-end
    &.center
        .list
            justify-content: center
    .list
        list-style: none
        padding: 0
        margin: 0
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: flex-start
        .item
            display: flex
            flex-flow: row wrap
            align-items: center
            .link
                color: $black
                brandon_regular(14px, true)
                &.nuxt-link-active
                    color: $primary
                &.nuxt-link-exact-active
                    color: $black
                svg
                    display: block
            .separator
                color: $gray_v3
                padding: 0 5px
                brandon_regular(24px, false)

/**
 * Alert */
#alert
    &.primary
        background-color: rgba(255, 144, 0, 0.2)
        .wrapper
            p
                color: $primary
    &.secondary
        background-color: rgba(255, 68, 0, 0.2)
        .wrapper
            p
                color: $dark_primary
    &.success
        background-color: rgba(0, 160, 20, 0.2)
        .wrapper
            p
                color: $success
    &.error
        background-color: rgba(234, 84, 85, 0.2)
        .wrapper
            p
                color: $red
    &.warning
        background-color: rgba(255, 200, 0, 0.2)
        .wrapper
            p
                color: $warning
    &.info
        background-color: rgba(67, 142, 255, 0.2)
        .wrapper
            p
                color: $blue
    &.dark
        background-color: rgba(122, 122, 122, 0.2)
        .wrapper
            p
                color: $gray
    .wrapper
        padding: 10px
        border-radius: 5px
        p
            brandon_medium(16px, false)

/**
 * Toast */
#toast_wrapper
    position: fixed
    top: 0
    right: 0
    width: 350px
    height: 100vh
    z-index: 4
    background-color: transparent
    padding: 20px
    list-style: none
    overflow-y: auto
    overflow-x: hidden
    &::-webkit-scrollbar-track
    	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1)
    	background-color: $gray_v2
    	border-radius: 10px
    &::-webkit-scrollbar
    	width: 5px
    	height: 10px
    	background-color: $gray_v2
    &::-webkit-scrollbar-thumb
    	border-radius: 10px
    	background-color: $primary
    #toast
        position: relative
        right: 0
        margin-bottom: 20px
        transform: translateX(0px)
        animation: right_slide 1s
        .close
            position: absolute
            top: -3px
            right: -3px
            display: inline-block
            padding: 0 10px
            border-radius: 5px
            brandon_regular(20px, false)
            background-color: $primary
            color: $white
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)
            z-index: 2
            transition: .3s ease-in-out
            &:hover
                top: -6px
                right: -6px
                transition: .3s ease-in-out
        .wrapper
            background-color: rgba(255, 144, 0, 0.2)
            border-left: 5px solid $primary
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2)
            padding: 20px
            p
                color: $primary
                brandon_medium(16px, false)
            &.secondary
                background-color: rgba(255, 68, 0, 0.2)
                border-left: 5px solid $dark_primary
                p
                    color: $dark_primary
        &.last-child
            margin-bottom: 0

/**
 * Collapse */
#collapse
    &.border
        border: 1px solid $gray_v3
        .collapse_item
            border-bottom: 1px solid $gray_v3
            &:last-child
                border-bottom: none
            .item_top
                border-bottom: none
    &.shadow
        .collapse_item
            border-radius: 5px
            background-color: $white
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1)
            margin-bottom: 15px
            &:last-child
                margin-bottom: 0
            .item_top
                border-bottom: none
    .collapse_item
        &.toggled
            .item_top
                &::before
                    transform: translateY(-50%) rotateX(180deg)
                    transition: .3s ease-in-out
            .item_bottom
                padding: 10px
                transition: .3s ease-in-out
                .description
                    opacity: 1
                    visibility: visible
                    transition: .3s ease-in-out
        .item_top
            position: relative
            padding: 10px
            border-bottom: 1px solid $gray_v3
            h2
                brandon_medium(18px, false)
                color: $gray
            &::before
                content: ''
                position: absolute
                top: 50%
                right: 10px
                border-left: 7px solid transparent
                border-right: 7px solid transparent
                border-top: 7px solid $primary
                transform: translateY(-50%) rotateX(0deg)
                transition: .3s ease-in-out
        .item_bottom
            padding: 0 10px
            transition: .3s ease-in-out
            .description
                height: 0px
                opacity: 0
                visibility: hidden
                transition: .3s ease-in-out

/**
 * Buttons */
.primary_button
