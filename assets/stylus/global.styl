/**
 * Layout */
.box
    padding: 20px
    border-radius: 5px
    background-color: $white
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.1)
    .top_box
        padding-bottom: 20px
        h2
            brandon_medium(16px, true)
            color: $gray
        .description
            padding-top: 10px
            *
                brandon_regular(16px, false)
                color: $black
            b
                brandon_bold(16px, false)
                color: $dark_primary
                background-color: rgba(255, 68, 0, 0.25)
                padding: 0 5px 2.5px
    .bottom_box
        .group
            padding: 10px
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1)
        .group_inline
            display: flex
            flex-flow: row wrap
            align-items: center
            justify-content: flex-start
.box_inline
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    .box
        flex: 0 0 calc(50% - 15px)

/**
 * Loader */
.loader
    position: fixed
    top: 0
    left: 0
    bottom: 0
    right: 0
    z-index: 99
    background-color: rgba(255, 255, 255, 0.3)
    .wrapper
        position: absolute
        top: 50%
        left: 0
        right: 0
        text-align: center
        margin: 0 auto
        width: 250px
        transform: translateY(-50%)
        .icon
            margin-bottom: 10px
        .dots
            display: inline-block
            position: relative
            width: 80px
            height: 80px
            div
                animation: rotate 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
                transform-origin: 40px 40px
                &::after
                    content: " "
                    display: block
                    position: absolute
                    width: 7px
                    height: 7px
                    border-radius: 50%
                    background-color: $primary
                    margin: -4px 0 0 -4px
                &:nth-child(1)
                    animation-delay: -0.036s
                    &::after
                        top: 63px
                        left: 63px
                &:nth-child(2)
                    animation-delay: -0.072s
                    &::after
                        top: 68px
                        left: 56px
                &:nth-child(3)
                    animation-delay: -0.108s
                    &::after
                        top: 71px
                        left: 48px
                &:nth-child(4)
                    animation-delay: -0.144s
                    &::after
                        top: 72px
                        left: 40px
                &:nth-child(5)
                    animation-delay: -0.18s
                    &::after
                        top: 71px
                        left: 32px
                &:nth-child(6)
                    animation-delay: -0.216s
                    &::after
                        top: 68px
                        left: 24px
                &:nth-child(7)
                    animation-delay: -0.252s
                    &::after
                        top: 63px
                        left: 17px
                &:nth-child(8)
                    animation-delay: -0.288s
                    &::after
                        top: 56px
                        left: 12px

#dialog
    position: absolute
    left: 0
    z-index: 1024
    &.centered
        .wrapper
            .content
                top: 50%
                transform: translateY(-50%)
                animation: centered_slide 1s
    .wrapper
        position: fixed
        top: 0
        left: 0
        z-index: 1050
        width: 100%
        height: 100%
        outline: 0
        overflow-x: hidden
        overflow-y: auto
        .content
            position: relative
            z-index: 1041
            width: auto
            max-width: 600px
            border-radius: 5px
            margin: 0 auto
            background-color: $white
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.3)
            transform: translateY(50px)
            animation: basic_slide 1s
            &.secondary
                .close
                    background-color: $dark_primary
                .content_top
                    color: $dark_primary
            &.success
                .close
                    background-color: $success
                .content_top
                    color: $success
            &.cancel
                .close
                    background-color: $red
                .content_top
                    color: $red
            &.warning
                .close
                    background-color: $warning
                .content_top
                    color: $warning
            &.info
                .close
                    background-color: $blue
                .content_top
                    color: $blue
            &.dark
                .close
                    background-color: $gray
                .content_top
                    color: $gray
            .close
                position: absolute
                top: -3px
                right: -3px
                display: inline-block
                padding: 0 10px
                border-radius: 5px
                brandon_regular(20px, false)
                background-color: $primary
                color: $white
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)
                z-index: 2
                transition: .3s ease-in-out
                &:hover
                    top: -6px
                    right: -6px
                    transition: .3s ease-in-out
            .content_top
                border-radius: 5px 5px 0 0
                background-color: rgba(0, 0, 0, 0.05)
                padding: 10px 20px
                brandon_medium(20px, false)
                color: $primary
            .content_middle
                padding: 10px 20px
                brandon_light(16px, false)
                color: $black
            .content_bottom
                border-top: 2px solid rgba(0, 0, 0, 0.05)
                text-align: right
                padding: 10px 20px
    .backdrop
        position: fixed
        top: 0
        z-index: 1040
        width: 100vw
        height: 100vh
        background-color: rgba(0, 0, 0, 0.2)

@keyframes rotate
    0% {
        transform: rotate(0deg)
    }
    100% {
        transform: rotate(360deg)
    }

@keyframes basic_slide
	from {
		opacity: 0
        transform: translateY(0)
    }
	to {
		opacity: 1
        transform: translateY(50px)
    }

@keyframes centered_slide
	from {
		opacity: 0
        transform: translateY(-100%)
    }
	to {
		opacity: 1
        transform: translateY(-50%)
    }

@keyframes right_slide
    from {
        opacity: 0
        transform: translateX(100px)
    }
    to {
        opacity: 1
        transform: translateX(0)
    }

.page-enter-active,
.page-leave-active
    transition: all .3s ease-in-out

.page-enter,
.page-leave-to
    opacity: 0
    transform: scale(1.05)

.fade-enter-active,
.fade-leave-active
    transition: all .3s ease-in-out

.fade-enter,
.fade-leave-to
    opacity: 0

.right_slide-enter-active,
.right_slide-leave-active
    transition: all .3s ease-in-out

.right_slide-enter,
.right_slide-leave-to
    opacity: 0
    transform: translateX(100px)
