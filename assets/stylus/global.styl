@import 'fonts'

$primary = #FF9000
$dark_primary = #FF4400
$black = #111
$white = #fff
$gray = #7A7A7A

html
    -webkit-text-size-adjust: none
    -webkit-font-smoothing: subpixel-antialiased
    backface-visibility: hidden
    brandon_regular(18px, false)

body
    &::-webkit-scrollbar
        width: 20px
        background-color: $white
    &::-webkit-scrollbar-track
        box-shadow: none
    &::-webkit-scrollbar-thumb
        background-color: $primary
        border: 6px solid rgba(0, 0, 0, 0)
        background-clip: padding-box
        border-radius: 50px

::-webkit-scrollbar-track
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1)
	background-color: #f8f8fb
	border-radius: 10px
::-webkit-scrollbar
	width: 8px
	height: 10px
	background-color: #f8f8fb
::-webkit-scrollbar-thumb
	border-radius: 10px
	background-color: #C9CAD3

body
    overflow-x: hidden
    &.cms
        background-color: #f8f8fb
    &.no_click
        pointer-events: none
    &.no_scroll
        overflow-y: hidden

*,
*:before,
*:after
    user-select: none
    box-sizing: border-box
    margin: 0

input,
input:before,
input:after,
textarea,
textarea:before,
textarea:after,
select,
select:before,
select:after
    user-select: initial

h1,
h2,
h3,
h4,
h5
    font-weight: normal

img
    height: auto
    vertical-align: middle

table
    width: 100%
    border-collapse: collapse

.hidden
    display: none

.none
    pointer-events: none

@page
    size: landscape
    margin: 0cm

@media print
    body
        margin: 0.75cm
        -webkit-print-color-adjust: exact

.pointer
    cursor: pointer

.action_outline_button
    display: inline-block
    brandon_medium(14px, true)
    color: $primary
    padding: 10px 15px
    border: 1px solid $primary
    border-radius: 10px
    background-color: transparent
    box-shadow: 0 0 20px transparent
    transform: translateY(0)
    transition: .3s ease-in-out
    &:hover
        color: $white
        background-color: $primary
        box-shadow: 0 0 20px rgba(255, 68, 0, 0.5)
        transform: translateY(-5px)
        transition: .3s ease-in-out

.action_button
    display: inline-block
    brandon_medium(14px, true)
    color: $white
    padding: 10px 15px
    border: 1px solid $primary
    background-color: $primary
    border-radius: 10px
    box-shadow: 0 0 20px transparent
    transform: translateY(0)
    transition: .3s ease-in-out
    &:hover
        box-shadow: 0 0 20px rgba(255, 68, 0, 0.5)
        transform: translateY(-5px)
        transition: .3s ease-in-out

/**
 * Form */
.action
    .group
        position: relative
        margin-bottom: 20px
        label
            position: absolute
            top: 50%
            left: 0
            brandon_medium(16px, true)
            color: $gray
            z-index: 0
            opacity: 0.5
            transform: translateY(-50%)
            transition: .3s ease-in-out
        .input
            position: relative
            z-index: 1
            width: 100%
            background-color: transparent
            border: none
            padding: 15px 10px
            border-bottom: 2px solid $black
            outline: none
            box-shadow: none
            brandon_regular(16px, false)
            color: $gray
            transition: .3s ease-in-out
            &.filled,
            &:focus
                border-bottom: 2px solid $primary
                transition: .3s ease-in-out
                & ~ label
                    color: $primary
                    top: 0
                    opacity: 1
                    transition: .3s ease-in-out
    .buttons
        padding-top: 20px
        display: flex
        flex-flow: row wrap
        align-items: center
        justify-content: space-between

/**
 * Loader */
.loader
    position: fixed
    top: 0
    left: 0
    bottom: 0
    right: 0
    z-index: 99
    background-color: $white
    .wrapper
        position: absolute
        top: 50%
        left: 0
        right: 0
        text-align: center
        margin: 0 auto
        width: 250px
        transform: translateY(-50%)
        .icon
            margin-bottom: 10px
        .dots
            display: inline-block
            position: relative
            width: 80px
            height: 80px
            div
                animation: rotate 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
                transform-origin: 40px 40px
                &::after
                    content: " "
                    display: block
                    position: absolute
                    width: 7px
                    height: 7px
                    border-radius: 50%
                    background-color: $primary
                    margin: -4px 0 0 -4px
                &:nth-child(1)
                    animation-delay: -0.036s
                    &::after
                        top: 63px
                        left: 63px
                &:nth-child(2)
                    animation-delay: -0.072s
                    &::after
                        top: 68px
                        left: 56px
                &:nth-child(3)
                    animation-delay: -0.108s
                    &::after
                        top: 71px
                        left: 48px
                &:nth-child(4)
                    animation-delay: -0.144s
                    &::after
                        top: 72px
                        left: 40px
                &:nth-child(5)
                    animation-delay: -0.18s
                    &::after
                        top: 71px
                        left: 32px
                &:nth-child(6)
                    animation-delay: -0.216s
                    &::after
                        top: 68px
                        left: 24px
                &:nth-child(7)
                    animation-delay: -0.252s
                    &::after
                        top: 63px
                        left: 17px
                &:nth-child(8)
                    animation-delay: -0.288s
                    &::after
                        top: 56px
                        left: 12px

@keyframes rotate
    0% {
        transform: rotate(0deg)
    }
    100% {
        transform: rotate(360deg)
    }

.page-enter-active,
.page-leave-active
    transition: all .3s ease-in-out

.page-enter,
.page-leave-to
    opacity: 0
    transform: scale(1.25)

.fade-enter-active,
.fade-leave-active
    transition: all .3s ease-in-out

.fade-enter,
.fade-leave-to
    opacity: 0
